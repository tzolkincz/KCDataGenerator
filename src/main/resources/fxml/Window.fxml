<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- creating root of the scene -->
<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.zcu.kiv.zswi.kcdatagenerator.ui.WindowController">
	<top>
		<MenuBar>
			<Menu text="_Akce" mnemonicParsing="true">
				<items>
					<MenuItem text="_Exit" fx:id="exit" onAction="#handleExitAction" />
				</items>
			</Menu>
		</MenuBar>
	</top>
	<center>
		<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
		    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
		    <Label style="-fx-font: NORMAL 20 Arial;" text="Uživatelé"                
		        GridPane.columnIndex="0" GridPane.rowIndex="0">
		    </Label>
		 
		    <Label text="Počet:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
		 
		    <TextField fx:id="userCountData" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
		        
		    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
		        <Button text="Generovat" onAction="#handleUserGenerationAction"/>
		    </HBox>
		    
		</GridPane>

	</center>
</BorderPane>